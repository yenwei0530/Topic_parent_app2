<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".user">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="基本資料"
        android:textSize="@dimen/dp_36"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_500"
            app:cardBackgroundColor="@color/whiteTextColor"
            app:cardCornerRadius="@dimen/dp_10"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="118dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:shrinkColumns="1"
                        android:stretchColumns="2">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.您與孩子的關係:"
                            android:textSize="@dimen/dp_16" />

                        <TableRow>

                            <Spinner
                                android:id="@+id/spinner1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/editTextTextPersonName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:ems="10"
                                android:hint="其他(請說明_____)"
                                android:inputType="textPersonName" />
                        </TableRow>

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2.是否與孩子同住:"
                            android:textSize="@dimen/dp_16" />


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Spinner
                                android:id="@+id/spinner2"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/editTextTextPersonName2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="同住幾年"
                                android:inputType="textPersonName" />
                        </TableRow>

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3.平常孩子在家由誰照顧和管教?"
                            android:textSize="@dimen/dp_16" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Spinner
                                android:id="@+id/spinner3"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/editTextTextPersonName3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="其他(請說明_____)"
                                android:inputType="textPersonName" />
                        </TableRow>

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4.該位孩子在家中排行:"
                            android:textSize="@dimen/dp_16" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Spinner
                                android:id="@+id/spinner4"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/editTextTextPersonName4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:digits="1234567890"
                                android:ems="10"
                                android:hint="其他(請說明_____)"
                                android:inputType="textPersonName" />
                        </TableRow>


                        <TextView
                            android:id="@+id/textView4_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="該位孩子有兄弟姊妹人數幾人:"
                            android:textSize="@dimen/dp_16" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Spinner
                                android:id="@+id/spinner4_1"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/editTextTextPersonName5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:digits="1234567890"
                                android:ems="10"
                                android:hint="其他(請說明_____)"
                                android:inputType="textPersonName" />
                        </TableRow>


                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5.該為孩子目前是否服過動或情緒藥物:"
                            android:textSize="@dimen/dp_16" />


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Spinner
                                android:id="@+id/spinner5"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/editTextTextPersonName6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="藥名"
                                android:inputType="textPersonName" />
                        </TableRow>


                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6.家中經濟來源:"
                            android:textSize="@dimen/dp_16" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Spinner
                                android:id="@+id/spinner6"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="wrap_content" />

                            <EditText
                                android:id="@+id/editTextTextPersonName7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="其他(請說明_____)"
                                android:inputType="textPersonName" />
                        </TableRow>


                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="7.父親教育程度 :"
                            android:textSize="@dimen/dp_16" />


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Spinner
                                android:id="@+id/spinner7"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="wrap_content" />
                        </TableRow>


                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="8.母親教育程度 :"
                            android:textSize="@dimen/dp_16" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Spinner
                                android:id="@+id/spinner8"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="wrap_content" />

                        </TableRow>

                    </TableLayout>


                </LinearLayout>
            </ScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/button9"
        style="@style/loginButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="完成"
        app:initialCornerAngle="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.487"
        app:spinning_bar_color="#FFF"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="4dp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="false"
        android:onClick="onLoginClick"
        android:src="@drawable/ic_back_img"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>